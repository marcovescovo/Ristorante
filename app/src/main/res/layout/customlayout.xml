<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView_tipo"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="5dp"
        android:layout_marginTop="23dp"
        android:textSize="15dp"
        android:textColor="#000000"
        android:text="TextView"
        tools:ignore="RtlCompat" />

    <TextView
        android:id="@+id/textView_specifiche"
        android:textSize="15dp"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/textView_tipo"
        android:layout_marginEnd="110dp"
        android:textColor="#000000"
        android:text="TextView"
        tools:ignore="RtlCompat" />

    <TextView
        android:id="@+id/textView_ora"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textView_specifiche"
        android:layout_marginStart="-115dp"
        android:layout_toEndOf="@+id/textView_specifiche"
        android:text="TextView"
        android:textSize="15dp"
        android:textColor="#000000"
        tools:ignore="RtlCompat" />

    <Button
        android:id="@+id/button_delete"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView_specifiche"
        android:layout_alignParentEnd="true"
        android:text="0"
        tools:ignore="RtlCompat" />
</RelativeLayout>